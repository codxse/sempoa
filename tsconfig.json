{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "app/javascript/packs/*"]
    },
    "sourceMap": true,
    "target": "es6",
    "noEmit": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules", "vendor", "public"],
  "compileOnSave": false
}
